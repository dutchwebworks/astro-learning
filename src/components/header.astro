---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header>
    <nav>
        <menu>
            <li><a href="/" class={currentPath === "" ? "is-active" : ""}>Home</a></li>
            <li><a href="/blog" class={currentPath.startsWith('blog') ? "is-active" : ""}>Blog</a></li>
            <li><a href="/about" class={currentPath === "about" ? "is-active" : ""}>About</a></li>
        </menu>
    </nav>
</header>

<style>
header {
    margin: 20px 0;
    padding: 0 0 20px 0;
    border-bottom: 1px solid #ccc;
}
header menu {
    margin: 0;
    padding: 0;
    list-style: none;
    display: flex;
}
header li {
    padding: 0;
    margin: 0;
}
header li + li {
    margin-left: 10px;
}

header a {
    color: deepskyblue;    
}

header a.is-active,
header a:hover {
    color: hotpink;    
}
</style>