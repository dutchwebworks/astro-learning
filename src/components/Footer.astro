---
import { SITE_TITLE } from '../consts';
---

<footer>
    <span>{SITE_TITLE}</span>
    
    <a href="https://github.com/dutchwebworks/astro-learning" target="_blank">
        View on Github

        <img src="/assets/img/github-logo.svg" width="16" height="16" alt="Github">
    </a>
</footer>

<style>
footer {
    transition: border-top-color .5s;
    display: flex;
    justify-content: space-between;
    border-top: 1px solid #ddd;
    padding-block-start: 10px;
    margin-block-start: 20px;
    font-size: .8rem;
}

footer a {
    color: var(--secondary-brand-color);
    transition: color .5s;
    display: flex;
    gap: 5px;
    align-items: center;
}

footer a:hover {
    color: var(--primary-brand-color);
}
</style>